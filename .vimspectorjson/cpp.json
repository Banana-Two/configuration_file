{
  "configurations": 
  {
    "cpp:launch": 
    {
      "adapter": "vscode-cpptools",
      "configuration": 
      {
        "name": "cpp:launch",
        "stopAtEntry": true,
        "type": "cppdbg",
        "request": "launch",
        "program": "${workspaceRoot}/.exe",
        "args": [],
        "cwd": "${workspaceRoot}",
        "environment": [],
        "externalConsole": true,
        "MIMode": "gdb",
        "setupCommands": 
        [
          {
            "description": "Enable pretty-printing for gdb",
            "text": "-enable-pretty-printing",
            "ignoreFailures": true
          }
        ]
      },
      "breakpoints": 
      {
        "exception": 
        {
          "all": "Y"
        }
      }
    }
  }
}
