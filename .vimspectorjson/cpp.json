{
  "configurations": {
    "cpp:launch": {
      "adapter": "vscode-cpptools",
      "configuration": {
        "name": "cpp:launch",
        "stopAtEntry": true,
        "type": "cppdbg",
        "request": "launch",
        "program": "${workspaceRoot}/.exe",
        "args": [],
        "cwd": "${workspaceRoot}",
        "environment": [],
        "externalConsole": false,
        "MIMode": "gdb",
        "breakpointers": {
          "exception": {
            "cpp_throw": "Y",
            "cpp_catch": "Y"
          }
        },
        "setupCommands": [
          {
            "description": "Enable pretty-printing for gdb",
            "text": "-enable-pretty-printing",
            "ignoreFailures": true
          }
        ]
      }
    }
  }
}
